<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/number_pad_background"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn1"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                style="@style/ButtonTextView"
                android:text="1"/>
            <TextView
                android:id="@+id/btn2"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                style="@style/ButtonTextView"
                android:text="2"/>
            <TextView
                android:id="@+id/btn3"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                style="@style/ButtonTextView"
                android:text="3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn4"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                style="@style/ButtonTextView"
                android:text="4"/>
            <TextView
                android:id="@+id/btn5"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                style="@style/ButtonTextView"
                android:text="5"/>
            <TextView
                android:id="@+id/btn6"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                style="@style/ButtonTextView"
                android:text="6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn7"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                style="@style/ButtonTextView"
                android:text="7"/>
            <TextView
                android:id="@+id/btn8"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                style="@style/ButtonTextView"
                android:text="8"/>
            <TextView
                android:id="@+id/btn9"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                style="@style/ButtonTextView"
                android:text="9"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btnNegative"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                style="@style/ButtonTextView"
                android:text="±"/>
            <TextView
                android:id="@+id/btn0"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                style="@style/ButtonTextView"
                android:text="0"/>
            <TextView
                android:id="@+id/btnDecimal"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                style="@style/ButtonTextView"
                android:text="."/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/btnBackspace"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            style="@style/ButtonTextView"
            android:text="←"/>

        <TextView
            android:id="@+id/btnClear"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            style="@style/ButtonTextView"
            android:text="C"/>

    </LinearLayout>

</LinearLayout>